@model Boxetheus.Models.BoxViewDesignModel

@{
    ViewData["Title"] = "List of Boxes";
}
<style>
       th {
        color: black;
    }

    td {
        color: black;
    }
</style>
<h1 class ="text-md-center"><i>Boxetheus Products Database</i></h1>

<form asp-controller="BoxViews" asp-action="Index" method="get">
    <p>
        <select asp-for="BoxDesign" asp-items="Model.Design">
            <option value="">All</option>
        </select>
        <span style="margin-right: 10px;"></span>

        Name:  <input type="text" name="SearchString" />

        <span style="margin-right: 10px;"></span>

        <input type="submit" value="Search" style="font-family: Roboto; font-weight:450; background: rosybrown; color:black; padding: 5px 10px; border-radius: 5px; text-decoration: none;" />

        @if (User.IsInRole("Admin"))
        {
          
            <a asp-action="Create" style="font-family: Roboto; font-weight:450; background: rosybrown; color:black; padding: 5px 10px; border-radius: 5px;text-decoration: none;">Create New</a>
           
        }
    </p>
</form>

<table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.BoxViews![0].Brand)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BoxViews![0].OrderDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BoxViews![0].Category)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BoxViews![0].Design)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BoxViews![0].Shape)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BoxViews![0].Size)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BoxViews![0].Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BoxViews![0].Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BoxViews![0].Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BoxViews![0].Color)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.BoxViews!)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Brand)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Design)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Shape)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Size)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Color)
                            </td>
                            <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" style="font-family: Roboto; font-weight:450; background:cadetblue ; color: black; padding: 5px 10px; border-radius: 5px; text-decoration: none;">Edit</a>
                    }

                        <a asp-action="Details" asp-route-id="@item.Id" style="font-family: Roboto; font-weight:450; background:mediumpurple ; color: black; padding: 5px 10px; border-radius: 5px; text-decoration: none;">Details</a>
                    
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" style="font-family: Roboto; font-weight:450; background: steelblue ; color: black; padding: 5px 10px; border-radius: 5px; text-decoration: none;">Delete</a>
                    }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <style>
                body {
                    margin: 0;
                    padding: 0;
                    background-image: url('/img/bg.jpg');
                    background-size: cover;
                    height: 100vh; /* Ensure the background covers the full height of the viewport */
                }

                .text-center {
                    text-align: center;
                    padding: 50px; /* Adjust as needed */
                    color: black; /* Optional: set text color to be visible against the background */
                }
            </style>
